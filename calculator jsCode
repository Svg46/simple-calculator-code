function add(sum,num){ //adds numbers together
    return sum+num
}
function subtract(sum,num){ //subtracts numbers
    return sum-num
}
function multiply(sum,num){ //multiplies numbers
    return sum*num
}
function divide(sum,num){ //divides numbers
    return sum/num
}

//variables for user input. both numbers and the calculation user wants to use
let num1 = Number(prompt("enter a number:"))
let num2 = Number(prompt("enter a 2nd number:"))
let func = prompt("what would you like to perform? add, divide, multply, or subtract:")


if (func.includes("add")){ //prints addition
    console.log(add(num1,num2))
}
else if (func.includes("divide")){ //prints division
    console.log(divide(num1,num2))
}
else if (func.includes("multiply")){ //prints multiplication
    console.log(multiply(num1,num2))
}
else if (func.includes("subtract")){ //prints subtraction
    console.log(subtract(num1,num2))
        
}
else{ //if user inputs function wrong error message popup
    alert("sorry I don't have that function, please refresh and try again")
}
